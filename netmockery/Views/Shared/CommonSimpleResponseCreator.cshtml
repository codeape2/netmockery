@using netmockery
@model SimpleResponseCreator

<br>
Content-type: @Model.ContentType

@if (Model.StatusCode != 200)
{
    <text>
    <br>HTTP status code: @Model.StatusCode
    </text>
}

@if (Model.Replacements.Length > 0)
{
    <text><br>Replacements:</text>
    foreach (var bodyReplacement in Model.Replacements)
    {
<text><br>'<code>@bodyReplacement.SearchTerm</code>' => '<code>@bodyReplacement.ReplacementTerm</code>'</text>
    }
}
